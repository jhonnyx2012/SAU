<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:customfont="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
 tools:context="weneka.com.surfapp.activities.RegistroActivity"
    android:background="@color/colorPrimaryDark">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="15dp">

        <uneg.software.sau.views.CustomFontButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registrarme"
            android:textSize="17dp"
            android:textColor="#fffdfcf9"
            customfont:fontName="AvenirMedium.otf"
            android:text="Registrarme"
            android:textAllCaps="false"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/button_background"
            android:layout_marginBottom="15dp" />

            <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="5dp"
                android:layout_gravity="bottom">

            <uneg.software.sau.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ya tengo cuenta"
                android:textColor="#fffdfcf9"

                customfont:fontName="AvenirLight.otf"
                android:id="@+id/textView" />

            <uneg.software.sau.views.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:id="@+id/iniciar_sesion"
                android:textColor="#fffdfcf9"

                customfont:fontName="AvenirDemi.otf"

                android:layout_marginLeft="10dp" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:fillViewport="true"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="50dp">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <uneg.software.sau.views.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_title"
            android:textSize="33dp"
            android:textColor="#fffdfcf9"
            customfont:fontName="avenirRegular.otf"
            android:text="Registro"
            android:layout_gravity="top|left|center_horizontal"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">
                <uneg.software.sau.views.CustomFontEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/nombre"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="15dp"
                    customfont:fontName="AvenirMedium.otf"
                    android:hint="Nombre"
                    android:textColorHint="#ffcecece"
                    android:layout_marginRight="10dp"
                    android:textSize="17dp"
                    android:textColor="#ffffffff"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <uneg.software.sau.views.CustomFontEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/apellido"
                    android:drawableLeft="@drawable/username"
                    android:drawablePadding="15dp"
                    customfont:fontName="AvenirMedium.otf"
                    android:hint="Apellido"
                    android:textColorHint="#ffcecece"
                    android:layout_marginRight="10dp"
                    android:textSize="17dp"
                    android:textColor="#ffffffff"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <uneg.software.sau.views.CustomFontEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/username"
                    android:drawableLeft="@drawable/ic_username_512"
                    android:drawablePadding="15dp"
                    customfont:fontName="AvenirMedium.otf"
                    android:hint="Username"
                    android:textColorHint="#ffcecece"
                    android:layout_marginRight="10dp"
                    android:textSize="17dp"
                    android:textColor="#ffffffff"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <uneg.software.sau.views.CustomFontEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/correo"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="15dp"
                    customfont:fontName="AvenirMedium.otf"
                    android:hint="Correo"
                    android:textColorHint="#ffcecece"
                    android:layout_marginRight="10dp"
                    android:textSize="17dp"
                    android:textColor="#ffffffff"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <uneg.software.sau.views.CustomFontEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/telefono"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="15dp"
                    customfont:fontName="AvenirMedium.otf"
                    android:hint="Telefono"
                    android:textColorHint="#ffcecece"
                    android:layout_marginRight="10dp"
                    android:textSize="17dp"
                    android:textColor="#ffffffff"
                    android:singleLine="true"
                    android:phoneNumber="true" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <uneg.software.sau.views.CustomFontEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clave"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="15dp"
                    customfont:fontName="AvenirMedium.otf"
                    android:hint="Contraseña"
                    android:textColorHint="#ffcecece"
                    android:layout_marginRight="10dp"
                    android:textSize="17dp"
                    android:textColor="#ffffffff"
                    android:singleLine="true"
                    android:password="true" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_gravity="center"/>
</FrameLayout>

